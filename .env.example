# Django Security Configuration
# Copy this file to .env and fill in the actual values for production

# SECURITY: Generate a new secret key for production
# You can use: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=your-secret-key-here

# DEBUG: Always set to False in production
DJANGO_DEBUG=False

# Database Configuration
DATABASE_URL=sqlite:///./db.sqlite3
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Email Configuration (for password reset, notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=Sistema Contable <noreply@yourcompany.com>

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Allowed Hosts (comma separated)
ALLOWED_HOSTS=localhost,127.0.0.1,yourcompany.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourcompany.com,https://www.yourcompany.com

# CSRF Configuration
CSRF_TRUSTED_ORIGINS=https://yourcompany.com,https://www.yourcompany.com

# Static and Media Files (for production)
STATIC_ROOT=/var/www/static
MEDIA_ROOT=/var/www/media

# Logging Level
LOG_LEVEL=INFO

# Session Configuration
SESSION_COOKIE_AGE=3600

# Company Configuration
DEFAULT_COMPANY_COUNTRY=COL
DEFAULT_CURRENCY=COP
DEFAULT_TIMEZONE=America/Bogota

# API Keys (if needed)
DIAN_API_KEY=your-dian-api-key
BANKING_API_KEY=your-banking-api-key

# Backup Configuration
BACKUP_STORAGE_PATH=/backups/
AUTO_BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_2FA=True
ENABLE_AUDIT_LOG=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_AUTOMATIC_BACKUPS=True

# Security Headers
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True